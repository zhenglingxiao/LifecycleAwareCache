<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewCache"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray"
        android:padding="8dp"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/buttonAddFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCache"
        android:layout_marginStart="8dp"
        android:text="添加 Fragment" />

    <Button
        android:id="@+id/buttonRemoveFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCache"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/buttonAddFragment"
        android:text="移除 Fragment" />

    <LinearLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonAddFragment"
        android:layout_margin="8dp"
        android:orientation="horizontal" />
</RelativeLayout>

